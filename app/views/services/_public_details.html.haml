.col-sm-6
  .panel.panel-default.well0
    .panel-heading
      %span.panel-title
        = translate_helper_translate(:service)
        = translate_helper_translate(:information)
        = add_tooltip("service_help")
    .panel-body
      -unless service.active
        %p.warning
          = translate_helper_translate(:service_is_inactive)
      - if service.logo_url
        %img{src: service.logo_url.to_s}
      - if service.display_color
        %p 
          = translate_helper_translate(:display_color) + ": " + service.display_color
      %p
        =service.phone
      %p
        =service.email
      - if service.url
        %p
          =link_to service.url, service.url
      -if service.service_type and service.service_type.name
        %p
          =translate_helper_translate(:service_type).to_s + ": " + translate_helper_translate(service.service_type.name.downcase.to_sym)
      -if service.external_id
        %p
          =translate_helper_translate(:service_id).to_s + ": " + service.external_id.to_s

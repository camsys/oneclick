#farezoneUploadDialog.modal.fade.col-sm-12{"aria-describedby" => translate_helper_translate(:update_farezones), :role => "dialog", "aria-hidden" => 'true', :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        = button_tag class: 'btn action-button pull-right', data: {dismiss: 'modal'} do
          = translate_helper_translate(:cancel)
        = button_tag id: 'farezoneUploadButton', class: "btn action-button pull-right" do
          = translate_helper_translate(:ok)
        :javascript
          $('#farezoneUploadButton').on('click', function() {
            $('#farezeonUploadForm').submit();
          });
        .modal-title{:style => "text-align:left;"}
          %b
            = translate_helper_translate(:upload_fare_zones)
      .modal-body{:style => "text-align:left;"}
        .modal-flash
        = simple_form_for :fare_zone, url: service_fare_zones_url(@service), remote: true, format: 'js', html: { class: 'form-horizontal', multipart: true, id: 'farezeonUploadForm' }, authenticity_token: true, wrapper: :horizontal_form do |f|
          = f.error_notification message: print_messages(f)
          %label
            = I18n.translate_helper_translate(:upload_fare_zones_notes)
          = f.input :zone_id_column, :label => translate_helper_translate(:zone_id_column), required:true
          = f.input :file, required:true, :label => translate_helper_translate(:fare_zones_shapefile),:as => :file
    checkAriaLabel(buddies_table_prev);
    checkAriaLabel(buddies_table_next);
    toggleAriaLabelPrevNextranslate_helper_translate(buddies_table_prev);
    toggleAriaLabelPrevNextranslate_helper_translate(buddies_table_next);

    var booking_table_prev = $("#bookingtable_paginate .prev");
    var booking_table_next = $("#bookingtable_paginate .next");
    checkAriaLabel(booking_table_prev);
    checkAriaLabel(booking_table_next);
    toggleAriaLabelPrevNextranslate_helper_translate(booking_table_prev);
    toggleAriaLabelPrevNextranslate_helper_translate(booking_table_next);
    });

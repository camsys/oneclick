.form-horizontal
  - collection.each do |c|
    - next if c.code=='age' # TODO kludge
    - (next unless c.ask_early) if c.class == Characteristic
    .form-group
      %label.col-sm-7.control-label= translate_helper_translate(c.note)
      .col-sm-5
        %p.form-control-static= human_readable(user_characteristics.get_answer_description(c.code))

.form-horizontal
  - collection.each do |c|
    - next if c.code=='age' # TODO kludge
    - (next unless c.ask_early) if c.class == Characteristic
    .form-group
      %label.col-sm-7.control-label= translate_helper(c.note)
      .col-sm-5
        - if c.code == "date_of_birth"
          -value = user_characteristics.get_answer_description(c.code)
          %p.form-control-static= ((value.is_a? String) ? value : translate_helper(value))
        - else
          %p.form-control-static= user_characteristics.get_answer_description(c.code)

- content_for :title, "#{translate_helper(:site_title)} - #{translate_helper(:users)}"
%h3{role: "main", aria: {label: "Users Table"}}= translate_helper(:users)
.col-sm-8
  %table.table.table-condensed
    %thead
      %tr
        %th= translate_helper(:username)
        %th= translate_helper(:email)
        %th= translate_helper(:registered)
        %th= translate_helper(:role)
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, user
          %td= user.email
          %td= user.created_at.to_date
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td
            %a.btn.btn-xs{"data-toggle" => "modal", :href => "#role-options-#{user.id}", :type => "button"}= translate_helper(:change_role)
            = render user
          %td= link_to(t(:delete_user), user_path(user), :data => { :confirm => translate_helper(:confirm_msg) }, :method => :delete, :class => 'btn btn-xs') unless user == current_user

.row
  .col-sm-12
    %table.table.table.condensed.table-striped.table-hover.table-bordered#travelersdatatable
      %thead
        %tr
          %th= translate_helper(:buddy)            
          %th= translate_helper(:email)
          %th= translate_helper(:status)
          %th= translate_helper(:updated)
      %tbody
        - user.traveler_relationships.each do |relationship|
          %tr
            %td= relationship.traveler.name
            %td= relationship.traveler.email
            %td= translate_helper(relationship.relationship_status)
            %td= distance_of_time_in_words_to_now(relationship.updated_at) +" " + translate_helper(:ago)


:javascript
  $(document).ready(function() {
    $('#travelersdatatable').dataTable( {
          stateSave: true,
          "oLanguage": {
              "sLengthMenu": "Display _MENU_ travelers per page",
              "sZeroRecords": "Nothing found - sorry",
              "sInfo": "Showing _START_ to _END_ of _TOTAL_ travelers",
              "sInfoEmpty": "Showing 0 to 0 of 0 travelers",
              "sInfoFiltered": "(filtered from _MAX_ total travelers)"
          },
          "sDom": "<'row'<'col-sm-6'f>><'row'<'col-sm-6'l>r>t<'row'<'col-sm-6'i><'col-sm-6'p>>",
      } );
  } );    

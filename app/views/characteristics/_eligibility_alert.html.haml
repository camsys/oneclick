- if inline
  .alert.alert-info.alert-block
    .row
      .col-sm-12
        %p
          / In order to plan a trip with your needs in mind, would you please tell us about yourself?
          = translate_helper_translate(:plan_with_you_in_mind) + " " + translate_helper_translate(:to_see_best_options)
    .row
      .col-sm-12
        %a.btn.btn-success{:alt => 'alt words', :title => 'title here', :href => skip_user_trip_path(@traveler, @trip_id)}
          %i{class: "icon #{CsHelpers::ACTION_ICONS[:plan_a_trip]}"}
          / No thanks, just plan my trip
          = translate_helper_translate(:no_thanks_just_plan_it)

#program_form
  = f.error_notification message: print_messages(f)
  = render partial: 'programs/eligibility_alert', locals: {inline: false}
  %h4
    = translate_helper_translate(:do_you_participate)

  -Characteristic.programs.where(:datatype => 'bool').each do |characteristic|
    = f.input characteristic.code.to_sym, collection: [[true, translate_helper_translate(:yes_str)], [false, translate_helper_translate(:no_str)], ['na', translate_helper_translate(:no_answer_str)]], :required => false, as: :radio_buttons, label: translate_helper_translate(characteristic.name), label_method: :last, value_method: :first, :item_wrapper_class => "inline"
  -Characteristic.programs.where(:datatype => 'disabled').each do |characteristic|
    = f.input characteristic.code.to_sym, collection: [[true, translate_helper_translate(:yes_str)], [false, translate_helper_translate(:no_str)], ['na', translate_helper_translate(:no_answer_str)]], :required => false, as: :radio_buttons, label: translate_helper_translate(characteristic.name) + " (not yet available)", label_method: :last, value_method: :first, :item_wrapper_class => "inline", disabled: true

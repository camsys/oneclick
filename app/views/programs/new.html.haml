- content_for :title, "#{translate_helper_translate(:site_title)} - #{translate_helper_translate(:new)} #{translate_helper_translate(:programs)}"
.row
  .col-sm-12
    %h1
      %i.fa.fa-info-circle#programs_header
      Programs - Step 2 of
      = @total_steps


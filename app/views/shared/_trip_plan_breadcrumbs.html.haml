.hidden-xs#breadcrumbs{:role => "navigation", :aria => {:label => 'Breadcrumbs'}}
  %ol{style: 'padding: 0px;'}
    - breadcrumbs = %w{trip options review plan}
    - breadcrumbs = %w{trip options grid review plan} if session[:is_multi_od] == true
    - breadcrumbs.each do |t|
      - t = t.to_sym
      %h2{style: "display:-webkit-inline-box;margin:0;"}
        %li.btn.btn-default.btn-arrow-right{class: breadcrumb_class(t)}<
          - if breadcrumb_tab_navigable(t)
            = link_to breadcrumb_path(t), tabindex: "6" do
              = translate_helper(t)
          - else
            = translate_helper(t)

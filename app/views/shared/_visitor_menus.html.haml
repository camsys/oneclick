= link_to translate_helper(:sign_up), new_user_registration_path, class: "btn action-button", "tabindex" => "2"
= link_to translate_helper(:log_in), new_user_session_path, class: "btn action-button", "tabindex" => "2"

.btn-group
  %button.btn.action-button.dropdown-toggle#visitor_menu{"type" => "button", "data-toggle" => "dropdown", "aria-expanded" => "false", "tabindex" => "2"}
    = translate_helper(:more)
    %strong.caret
  %ul.dropdown-menu{:role => "menu"}
    %li
      = link_to providers_path, "tabindex" => "2" do
        %i{class: 'fa fa-umbrella'}
        = translate_helper(:providers)

    %li
      = link_to '#feedbackModal', "tabindex" => "2", data: {target: "#feedbackModal", toggle: 'modal'} do
        %i{class: 'fa fa-thumbs-o-up'}
        = translate_helper(:feedback)

- splash_key = splash_key || :splash
- title_key = title_key || :splash_title
- title_key_help = title_key.to_s + "_help" || :splash_title_help
- splash_div_class = splash_div_class || ''
- if TranslationEngine.show_translation_item?(splash_key)
  .panel.panel-default#splash{style: 'padding:0px;', role: "complementary", aria: {label: "#{translate_helper(title_key)} text"}}
    .panel-heading
      %h3.panel-title
        =translate_helper(title_key)
        = add_tooltip(title_key_help)
    .panel-body
      = translate_helper(splash_key).html_safe rescue ''
/ end of CMS column

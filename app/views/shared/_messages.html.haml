- Rails.logger.info flash.ai
- flash.each do |name, msg|
  - next if name.to_s =~ /^local_/
  - if msg.is_a?(String)
    - alert_class = case name
    - when :success, :info, :warning, :danger
      - "alert-#{name}"
    - when :notice
      - "alert-success"
    - else
      - "alert-danger"
    %div{:class => "alert #{alert_class} fade in"}
      %a.close{"data-dismiss" => "alert"} Ã—
      = content_tag :div, msg, :id => "flash_#{name}"

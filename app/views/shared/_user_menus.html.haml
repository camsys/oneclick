.btn-group
  %button.btn.action-button.dropdown-toggle#user_menu{"type" => "button", "data-toggle" => "dropdown", "aria-expanded" => "false"}
    %i.fa.fa-user
    - unless is_assisting
      = "#{translate_helper_translate(:welcome)}, #{get_traveler.welcome}"
    - else
      = translate_helper_translate(:assisting_assisted_user_email, assisted_user: @traveler.name)
    %b.caret
  %ul.dropdown-menu{:role => "menu"}
    = render partial: 'menu_item', collection: traveler_actions(with_logout: true) 

!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : translate_helper_translate(:site_title)
      %meta{:content => content_for?(:description) ? yield(:description) : translate_helper_translate(:site_description), :name => "description"}
      = ajaxful_rating_style
      = stylesheet_link_tag "application", :media => "all"
      = stylesheet_link_tag '' + brand, :media => "all"
      = stylesheet_link_tag '_base', :media => "all"
      = stylesheet_link_tag 'style', :media => "all"
      = stylesheet_link_tag "//cdn.leafletjs.com/leaflet-0.4/leaflet.css", :media => "all"

      = javascript_include_tag "//cdn.leafletjs.com/leaflet-0.4/leaflet.js"
      = javascript_include_tag "//maps.google.com/maps/api/js?v=3.2&sensor=false"
      = javascript_include_tag "application" # TODO This should go in footer
      = javascript_include_tag "//www.google.com/jsapi"

      %meta{name: "ui_typeahead_delay",       content: Rails.application.config.ui_typeahead_delay}
      %meta{name: "ui_typeahead_min_chars",   content: Rails.application.config.ui_typeahead_min_chars}
      %meta{name: "ui_typeahead_list_length", content: Rails.application.config.ui_typeahead_list_length}
      %meta{name: "ui_min_geocode_chars",     content: Rails.application.config.ui_min_geocode_chars}

      %meta{name: "session_timeout",       content: Rails.application.config.session_timeout}
      %meta{name: "session_alert_timeout", content: Rails.application.config.session_alert_timeout}

      = csrf_meta_tags
      = yield(:head)

      :javascript
        addrConfig.setCurrentMachineNameInField('#{request.headers['HTTP_X_CLIENT_HOSTNAME']}' || 'machine1');

  %body{:class => "kiosk #{controller_css_class} #{action_name}"}
    / layouts/kiosk/application.html.haml
    - unless @hide_timeout
      = render 'kiosk/shared/tap_timeout'
    = render 'kiosk/shared/navigation'
    .container-fluid
      #main{:role => "main"}
        .container-fluid
          = render 'kiosk/shared/assisting'
          #messages= render 'shared/messages'
          - if content_for? :layout_template
            = yield(:layout_template)
          - else
            = yield

    .next-footer-container.step1-btn.hidden
      .container-fluid
        .row-fluid
          .span4
            %a.edit-trip-btn.hidden{href: kiosk_user_new_trip_from_path(user_id: current_or_guest_user.id, anchor: 'back')}
              %h3 Make Changes
          .span8
            .next-step-container
              .next-step-btn
                %h1 Next Step
                %div.arrow-container.pull-right
                  .arrow
      / ! end of .container
    / ! end of #main

    :javascript
      var localized_yes_str;
      var localized_no_str;
      var localized_ok_str;
      var localized_cancel_str;

      $(document).ready(function(){
        // Set default locale configs and other settings that affect every page
        localized_yes_str = "#{translate_helper_translate(:yes_str)}";
        localized_no_str = "#{translate_helper_translate(:no_str)}";
        localized_ok_str = "#{translate_helper_translate(:ok)}";
        localized_cancel_str = "#{translate_helper_translate(:cancel)}";

        bootbox.setDefaults({
          locale: "#{I18n.locale}"
        });
      });

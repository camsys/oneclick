                      = f.label characteristic.code.to_sym, nil, :text => nil, :class => 'no', :value => false
                    %td
                      = f.radio_button characteristic.code.to_sym, "na"
                      = f.label characteristic.code.to_sym, nil, :text => nil, :class => 'unsure', :value => "na"

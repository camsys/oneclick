#return-yesno.js-hide-nav-button(data-index=0)
  %span#return-trip.row-fluid
    .span8.offset2
      .title-container
        .bar
        %h3 Do you need a return trip?

      %a#yes.js-progress-sequence{:href => "#", :name => "yesno", :value => "yes"} Yes
      %a#no{:href => "#", :name => "yesno", :value => "no"} No

%div{:data => {:index => 1}}
  = f.input :trip_date, :wrapper => :append, :label => t(:trip_date) do
    #date-arrow-prev.prev.month.disabled
    #trip-date= f.input_field :return_trip_date, :as => :string, :label => false
    #date-arrow-next.next.month

#timepicker-two.kiosk-timepicker{ :data => {:index => 7}}
  = f.input :is_round_trip, :label => false, :wrapper_html => {:class => 'controls controls-row'} do
    %div(style="visibility: hidden; height: 0")
      = f.input_field :is_round_trip, :as => :boolean, :inline_label => "Return after", :class => "hidden"

    = f.input :return_trip_time, :label => false, :wrapper => :append do
      #return-trip-time
        = f.label :return_trip_time
        = f.input_field :return_trip_time, :as => :string, :label => false

  .row-fluid
    .span10.offset1
      .timetable
        %ul.row-fluid.time
          %li 1:00
          %li 1:30
          %li 2:00
          %li 2:30
          %li 3:00
          %li 3:30
        %ul.row-fluid.time
          %li 4:00
          %li 4:30
          %li 5:00
          %li 5:30
          %li 6:00
          %li 6:30
        %ul.row-fluid.time
          %li 7:00
          %li 7:30
          %li 8:00
          %li 8:30
          %li 9:00
          %li 9:30
        %ul.row-fluid.time
          %li 10:00
          %li 10:30
          %li 11:00
          %li 11:30
          %li 12:00
          %li 12:30
        %ul.row-fluid.timeofday
          %li.notime
          %li.notime
          %li.notime
          %li.notime
          %li.ampm am
          %li.ampm pm

= f.hidden_field :outbound_trip_time
= f.hidden_field :outbound_trip_date

- if is_assisting
  .row
    .col-sm-12.alert.dropdown
      %div{style: 'text-align: center;'}
        %div{style: 'display: inline-block'}
          %a.dropdown-toggle{data: {toggle: 'dropdown', target: '#'}}
            %i.fa.fa-compass{style: 'font-size: 1.5em;'}
            = translate_helper(:assisting_assisted_user_email, assisted_user: @traveler.name)
            %b.caret
          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to unset_traveler_user_trips_path(current_user) do
                %i.fa.fa-times
                = translate_helper(:stop_assisting)

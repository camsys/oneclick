.panel.panel-default
  .panel-heading
    %h3.panel-title
      = translate_helper_translate(title)
      = add_tooltip("#{title}_help")
  .panel-body
    %table.table.table.condensed.table-striped.table-hover.table-bordered
      %thead
        %tr
          - cols.each do |col|
            %th
              = col
      %tbody
        - data_rows.each do |data_row|
          %tr
            - data_row.each do |val|
              %td
                = val

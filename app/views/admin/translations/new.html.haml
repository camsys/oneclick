- content_for :title, "#{t(:site_title)} - #{t(:create_translation)}"
.row.info-header
	.col-sm-12
		.btns.pull-right
			= button_tag id:'create_translation', type: 'submit', class: "btn action-button", style: "margin-right:5px;" do
				= translate_helper(:create_translation)
			= link_to translate_helper(:cancel), admin_translations_path, { class: "btn action-button" }
		%h1 Define A Translation

.panel.panel-default{style: 'padding: 0px;'}
	.panel-heading
		%h2.panel-title
			Translation Parameters
			= add_tooltip("translation_parameters_help")
	.panel-body
		#translations_form
			.row
				.col-sm-12
					= simple_form_for [:admin, @translation], html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |t|
						= t.input :key
						- selected_locale_name = @translation.locale.name rescue selected_locale_name = "en"
						= t.input :locale, collection: Locale.all.uniq.pluck(:name), include_blank: false, :selected => selected_locale_name
						= t.input :is_list
						= t.input :value, input_html: {rows: 10}
:javascript
	$('#create_translation').on('click', function(){
		$('#translations_form form').submit();
	});

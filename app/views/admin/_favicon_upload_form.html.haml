- favicon = locals[:favicon]
= simple_form_for favicon, url: admin_upload_favicon_path, method: 'patch', html: { class: 'form-horizontal', multipart: true }, authenticity_token: true, wrapper: :horizontal_form do |f|
  .row
    .col-sm-12
      .panel.panel-default
        .panel-heading
          .row
            .col-sm-12
              %h3.panel-title
                .btns.pull-right
                  = f.submit translate_helper_translate(:ok), class: 'btn action-button', role: 'button'
                - if favicon == :mobile_favicon
                  = translate_helper_translate(:upload_mobile_favicon)
                  = add_tooltip("upload_mobile_favicon_help")
                - elsif favicon == :tablet_favicon
                  = translate_helper_translate(:upload_tablet_favicon)
                  = add_tooltip("upload_tablet_favicon_help")
                - else
                  = translate_helper_translate(:upload_favicon)
                  = add_tooltip("upload_favicon_help")
        .panel-body
          = f.error_notification message: print_messages(f)
          %label
            = translate_helper_translate(:upload_favicon_notes)
          = f.input "file", required:true, :label => translate_helper_translate(:select_favicon_to_upload), :as => :file

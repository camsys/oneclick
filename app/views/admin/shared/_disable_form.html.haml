= simple_form_for deleteable, url: { action: 'destroy' }, method: :delete do |f|
  #deleteConfirmDialog.modal.fade.col-sm-12{"aria-describedby" => t(:remove_provider), :role => "dialog", "aria-hidden" => 'true', :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          = button_tag class: 'btn action-button pull-right', data: {dismiss: 'modal'} do
            = t(:cancel)
          = button_tag type: 'submit', class: "btn action-button pull-right", style: "margin-right:5px;" do
            = icon_label(:delete)
          .modal-title{:style => "text-align:left;"}
            %b
              = t(:site_title)
        .modal-body{:style => "text-align:left;"}
          = f.input :disabled_comment, label: "#{ I18n.t(:why_are_you_deleting).to_s.capitalize }. #{ deleteable.name }?"
          = t(:confirm_remove_message) + deleteable.name + " ?"

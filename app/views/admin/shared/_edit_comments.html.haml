.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          = translate_helper(:public_comments)
          = add_tooltip("public_comments_help")
      .panel-body
        =translate_helper(:public_comments_message)
        - commentable.public_comments.sort!{|a, b| a.locale <=> b.locale}
        = f.simple_fields_for :public_comments do |comment|
          = comment.input :comment, label: [t("locales.#{comment.object.locale}"), translate_helper(:comment)].join(' ')
          = comment.input :locale, as: :hidden
          = comment.input :visibility, as: :hidden

= simple_form_for :logo, url: admin_upload_application_logo_path, method: 'patch', html: { class: 'form-horizontal', multipart: true }, authenticity_token: true, wrapper: :horizontal_form do |f|
  .row
    .col-sm-12
      .panel.panel-default
        .panel-heading
          .row
            .col-sm-12
              %h3.panel-title
                .btns.pull-right
                  = f.submit translate_helper_translate(:ok), class: 'btn action-button', role: 'button'
                = translate_helper_translate(:upload_application_logo)
                = add_tooltip("upload_application_logo_help")
        .panel-body
          = f.error_notification message: print_messages(f)
          %label
            = translate_helper_translate(:upload_application_logo_notes)
          = f.input "file", required:true, :label => translate_helper_translate(:select_logo_image_to_upload),:as => :file
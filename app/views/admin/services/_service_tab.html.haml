-# Takes a boolean new_service, a boolean active, and then either a service service, or a mode mode.

%li{  id: new_service ? "new-#{mode}-service-tab" : "service-#{service.id}-tab",
      role: 'presentation',
      class: (active ? "active" : "") + " service-tab " + (new_service ? "new-service-tab hidden" : "") }
  %a{   href: new_service ? "#new-#{mode}-service-tab-content" : "#service-#{service.id}-tab-content",
        "aria-controls" => new_service ? "#new-#{mode}-service-tab-content" : "service-#{service.id}-tab-content",
        role: "tab",
        "data-toggle" => "tab",
        "data-service-id" => new_service ? "new-#{mode}" : service.id,
        class: "service-tab-link" }
    = new_service ? translate_helper(:new_service) : service.name

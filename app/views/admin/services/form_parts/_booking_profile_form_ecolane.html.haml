.booking-profile-form-container.ecolane.agency-0{ class: service.booking_profile == 0 ? "" : "hidden" }
  = f.simple_fields_for :ecolane_profile do |ep|
    -if service.ecolane_profile
      = ep.input :system, input_html: {value: service.ecolane_profile.system, class: "input-ecolane-profile-system"}
      = ep.input :token, input_html: {value: service.ecolane_profile.token, class: "input-ecolane-api-token"}
      = ep.input :disallowed_purposes, as: :text,
        input_html: { value: service.ecolane_profile.disallowed_purposes_text,
                      class: "input-ecolane-disallowed-purposes",
                      placeholder: translate_helper(:ecolane_disallowed_purposes_placeholder)}
      = ep.input :booking_counties, as: :text,
        input_html: { value: service.ecolane_profile.booking_counties_text,
                      class: "input-ecolane-booking-counties",
                      placeholder: translate_helper(:ecolane_booking_counties_placeholder)}
      = ep.input :use_customer_default, as: :boolean,  checked_value: true, unchecked_value: false, input_html: {checked: service.ecolane_profile.use_customer_default, class: "input-ecolane-profile-use-customer-default"}
      = ep.input :api_version, as: :hidden, input_html: {value: "9"} # Default to API Version 9
    -else
      = ep.input :system
      = ep.input :token
      = ep.input :disallowed_purposes, as: :text,
        input_html: {placeholder: translate_helper(:ecolane_disallowed_purposes_placeholder)}
      = ep.input :booking_counties, as: :text
      = ep.input :api_version, as: :hidden, input_html: {value: "9"} # Default to API Version 9

- content_for :title, "#{translate_helper(:site_title)} - " + (current_page?(action: 'new') ? "#{translate_helper(:new_provider)}" : "#{translate_helper(:edit)} #{@provider.name}")

.row.info-header
  .col-sm-12
    %h2 Transportation Services
.row
  .col-md-8.col-sm-10.col-xs-12.center
    .panel.panel-servicedata
      .panel-heading
        %h4.panel-title
          = translate_helper(:provider)
          = add_tooltip("provider_info_help", "fa fa-question-circle", nil)
      .panel-body
        = render partial: 'provider_form'
-unless current_page?(action: 'new') # Only show services menu if in edit mode
  = render partial: 'admin/services/services_menu'



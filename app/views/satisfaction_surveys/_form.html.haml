= simple_form_for @satisfaction_survey, html: {method: :post, remote: true} do |f|
  .row
    .col-sm-10.col-sm-offset-1
      = f.error_notification message: print_messages(f)
      = f.hidden_field :trip_id, value: @trip.id

      %p
        = translate_helper_translate(:trip_satisfaction_notes)

      %p
        = f.label :satisfied, translate_helper_translate(:satisfied_by_trips)
        %br
        = f.input_field :satisfied, as: :radio_buttons, item_wrapper_class: "radio-inline"
        = f.input :reasoning, as: :check_boxes, collection: [translate_helper_translate(:fare), translate_helper_translate(:walk_distance_sorter), translate_helper_translate(:travel_time), translate_helper_translate(:number_of_transfers)], label: translate_helper_translate(:tell_us_what_went_wrong)
        = f.input :comment, label: translate_helper_translate(:comment)
      .col-sm-6.col-sm-offset-3
        = f.button :submit, translate_helper_translate(:save), :class => 'btn action-button', id: "save_survey", disabled: "disabled"
        %button.btn.action-button{"data-dismiss" => "modal"}
          = translate_helper_translate(:close)

:javascript
  $('#satisfaction_survey input.check_boxes').removeClass('form-control');
  $('.satisfaction_survey_reasoning').hide();
  $('#satisfaction_survey').on('show.bs.modal', function() {
    $('#satisfaction_survey input[type=radio]').change(function(){
      if ($(this).is(':checked')) {
        if ($(this).attr('id') == "satisfaction_survey_satisfied_false") {
          $('.satisfaction_survey_reasoning').show();
        } else {
          $('.satisfaction_survey_reasoning').hide();
        }
        $('#save_survey').removeAttr('disabled');
      } else {
        $('#save_survey').attr('disabled', 'disabled');
      }
    });
  });

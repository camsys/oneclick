.modal.hide.fade#send_trip_by_email
  .modal-header
    %a.close{"data-dismiss" => "modal"} Ã—
    %h3 Send trip plan by email
    = simple_form_for :email, url: email_user_trip_path(@traveler, @trip), html: { class: 'form-horizontal',
      id: 'send_by_email_form' }, data: {dismiss: 'modal'}  do |f|
      .modal-body
        = f.error_notification
        - if user_signed_in?
          = f.input :send_email_to, label: t(:send_email_to), :required => false,
            collection: send_trip_by_email_list(@traveler, is_assisting),
            :input_html => { :checked => true}, :as => :check_boxes
        - else
          = f.input :from, label: t(:from), required: false
        = f.input :email_addresses, label: t(:to), required: true, hint: "Use commas to separate multiple emails."
        = f.input :email_comments, as: :text, label: 'Comments', required: false, input_html: {rows: 3}
      .modal-footer
        = button_tag type: :submit, class: 'btn btn-info' do
          %i.icon-envelope
          = t(:send)
        = link_to '#', :class => "cancel_link" do
          %i.icon.icon-reply
          = t(:cancel)
:javascript
  $('#send_by_email_form').on('submit', function() {
    $('#send_trip_by_email').modal('hide')
  })
  $('.cancel_link').on('click', function() {
    $('#send_trip_by_email').modal('hide')  
  })

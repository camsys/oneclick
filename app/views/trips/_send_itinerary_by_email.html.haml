%div{:class => "modal hide fade", :id => "send_itinerary_by_email_" + itinerary.id.to_s}
  %div{:class => "modal-header"}
    .row-fluid
      .span12
        = simple_form_for :email, url: email_itinerary_user_trip_path(@traveler, @trip, itinerary: itinerary), html: { class: 'form-horizontal',
          id: 'send_itinerary_by_email_form_' + itinerary.id.to_s }, data: {dismiss: 'modal'}  do |f|
          = f.error_notification
          - if user_signed_in?
            - if assisting?
              = f.input :send_to_traveler, as: :boolean, label: t(:send_to_traveler)
          - else
            = f.input :from, label: t(:from_address), required: true
          - if user_signed_in?
            = f.input :email_addresses, label: t(:email_addresses), required: false, :input_html => { :value => @traveler.email }
          -else
            = f.input :email_addresses, label: t(:email_addresses), required: false
          = button_tag type: :submit, class: 'pull-right btn btn-info' do
            %i.icon-envelope
            =t(:e_mail)


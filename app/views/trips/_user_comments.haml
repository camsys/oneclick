.modal.hide.fade{id: "user_comments_" + trip.id.to_s}
  .modal-header
    %h3= translate_helper(:leave_comments)
  = simple_form_for :trip, url: comments_user_trip_path(@traveler, trip), html: { class: 'form-horizontal',
    id: 'user_comments_form_' + trip.id.to_s}  do |f|
    .modal-body
      = f.error_notification message: print_messages(f)
      = f.input :user_comments, :as => :text, label: false, required: false, :input_html => { :rows => 6 , :style => 'width: 98%', :value => trip.user_comments}
    .modal-footer
      = button_tag type: :submit, class: 'btn action-button' do
        =translate_helper(:submit)
      = link_to '#', class: "cancel_link", data: {dismiss: 'modal'} do
        %i.fa.fa-reply
        = translate_helper(:cancel)

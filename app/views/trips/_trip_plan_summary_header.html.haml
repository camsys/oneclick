- i = itinerary
.row.col-sm-12{style: "background: white; margin: 0px 0px 5px 0px; border-radius: 5px;"}
  %table{style: "width: 100%", summary: "#{i.trip_part.description.html_safe}"}
    %thead
      %tr
        %th &nbsp;
        %th
          %strong= translate_helper(:fare)
        %th
          %strong= translate_helper(:trip_date)
        %th
          %strong= translate_helper(:trip_time)
        %th
          %strong= translate_helper(:walk_time)
        %th
          %strong= translate_helper(:transfers)
    %tbody
      %tr
        %td.itinerary_icons{:width => '10%', :style => "text-align: left;"}
          %img{:src => logo_url_helper(i), alt: "#{translate_helper(i.mode)} icon"}
        %td{:width => '15%'}
          .itinerary_text
            = i.cost_in_words
        %td{:width => '15%'}
          .itinerary_text
            = i.date_in_words
        %td{:width => '25%'}
          .itinerary_text
            = i.time_range_in_words
          .itinerary_text_small{:style => "line-height: normal;"}
            = i.duration_in_words
        %td{:width => '15%'}
          .itinerary_text
            = i.walking_time
        %td{:width => '15%'}
          .itinerary_text
            = i.transfers_in_words

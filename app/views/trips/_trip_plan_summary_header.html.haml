- i = itinerary
- Rails.logger.info i.ai
.row.col-sm-12{style: "background: white; margin: 0px 0px 5px 0px; border-radius: 5px;"}
  %table{style: "width: 100%"}
    %thead
      %tr
        %th.sr-only= t(:mode)
        %th= t(:cost)
        %th= t(:times)
        %th= t(:walk_time)
        %th= t(:transfers)
    %tbody
      %tr
        %td.itinerary_icons{:width => '20%', :style => "text-align: left;"}
          %i.transit_itinerary_icons.mode_icon_formatting.trip-mode-icon{:class =>i.mode.code}
          /%i.transit_itinerary_icons.mode_icon_formatting{:class => get_mode_icon('bus')}
          .sr-only= t(i.mode)
        %td{:width => '20%'}
          .itinerary_text
            = i.cost_in_words
        %td{:width => '30%'}
          .itinerary_text
            /= format_time(i.start_time) + ' ' + t(:to) + ' ' + format_time(i.end_time)
            = i.time_range_in_words
          .itinerary_text_small{:style => "line-height: normal;"}
            = i.duration_in_words
        %td{:width => '20%'}
          .itinerary_text
            = i.walking_time
        %td{:width => '10%'}
          .itinerary_text
            = i.transfers_in_words


.row
  .span12
    %h1
      %i{class: "icon #{CsHelpers::ACTION_ICONS[:plan_a_trip]}"}
      = t(:plan_a_trip)
      
-if @trip_proxy.errors.any?
  .row
    .span12
      %h4
        %div{:class => "alert alert-error"}
          %a.close{"data-dismiss" => "alert"} Ã—
          %div= t(:correct_errors_to_create_a_trip)


.row{:style => "margin-top:20px;"}
  %div{class: (cms_snippet_content('plan-a-trip_html').empty? ? 'span12' : 'span9')}  
    .row.well.well-small
      #trip_form.span6
        = render 'trip_form'
      #trip_map.span6
        = render 'trip_map'  
  - unless cms_snippet_content('plan-a-trip_html').empty?
    .span3= cms_snippet_content('plan-a-trip_html')

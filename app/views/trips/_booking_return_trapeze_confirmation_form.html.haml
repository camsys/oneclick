=simple_form_for @trip.return_part, url: user_trip_trip_part_path(trip_id: @trip.id),  html: { id: 'return_confirmation_form', class: 'form-horizontal' } do |f|

  .row
    %label.col-sm-4.text-right
      =translate_helper(:unit_number)
    = f.input :unit, :label => false, :as => :string, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}, input_html: {id: 'return_unit'}


  .row
    %label.col-sm-4.text-right
      =translate_helper(:confirm_trip_purpose)
    = f.input :booking_trip_purpose_id, :label => false, :collection => @trip.return_part.get_booking_trip_purposes, :include_blank => false, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}, input_html: {id: 'return_trip_purpose_collection'}


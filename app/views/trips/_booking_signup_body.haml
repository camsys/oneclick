.modal-dialog
  .modal-content
    .modal-header
      .pull-right
        -if @traveler.can_book?
          :javascript
            $('#initialCloseButton').hide();
            setTimeout(function(){
              $('#bookingSignupModal').modal('hide');
              location.href = "/";
            }, 2000);
              
        -else
          = button_tag id: 'bookingSubmitButton', type: :submit, class: 'btn action-button' do
            = translate_helper(:submit)
          :javascript
            $('#bookingSubmitButton').on('click', function(event) {
              $('#bookingSignupModal form').submit();
            });
          %button{"type" => "button", "class" => "btn action-button", "data-dismiss" => "modal"}= translate_helper(:initial_booking_close)
      %h3.modal-title=translate_helper(:initial_booking_title)
    .modal-body#bookingSignupContent
      -if @traveler.can_book?
        =translate_helper(:booking_link_success)
      -else
        =translate_helper(:initial_booking_message)

        = simple_form_for @booking_proxy, :remote => true, :url => initial_booking_user_path(@traveler), :html => { :class => "form-horizontal"}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean }  do |f|
          .form-inputs
            = f.error_notification message: print_messages(f)
            = f.input :service_id, :as => :hidden, :input_html => {value: Service.where(booking_service_code: 'ecolane').first.id}
            = f.input :external_user_id,label: "Rabbit Transit " + translate_helper(:client_id), label_method: :last, value_method: :first, :item_wrapper_class => "inline"
            = f.input :dob, label: translate_helper(:dob), label_method: :last, value_method: :first, :item_wrapper_class => "inline", placeholder: "mm/dd/yyyy", hint: translate_helper(:dob_notice)
            = f.input :county, label: "County", :item_wrapper_class => "inline", :collection => Oneclick::Application.config.kiosk_counties, :selected => Oneclick::Application.config.kiosk_counties.first
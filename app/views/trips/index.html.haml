- content_for :title, "#{translate_helper(:site_title)} - #{translate_helper(:trips)}"
.row.info-header
  .col-sm-12
    .btns.pull-right{style: 'padding-bottom:4px;'}
      =link_to translate_helper(:plan), root_path, {class: 'btn action-button', role: 'button'}
    %h1=translate_helper(:trips)
.panel.panel-default{style: 'padding: 0px;', role: "main", aria: {label: "Trips Table"}}
  .panel-heading
    %h2.panel-title
      = translate_helper(:trips)
      = add_tooltip("trips_help")
  .panel-body
    = search_form_for @q, :url => "#{url_for(locale: params[:locale])}", html: {class: 'filter-form', style: 'padding-top: 10px;'} do |f|
      .form-group
        = f.search_field "from_address_or_to_address_or_trip_purpose_cont", {class: "form-control", style: 'width: auto; display: inline-block;' }
        = f.submit translate_helper(:search), class: 'btn action-button'
    = render partial: "trips_display_table", locals: {trips: @trips, traveler: @traveler, show_username: false}

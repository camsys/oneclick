%table.taxi_details{style: "padding: 16px 5px;"}
  %tr
    %td.itinerary_icons{style: "text-align: center;line-height: normal;font-size: 2.25em; padding: 16px 10px;"}
      = image_tag(logo_url_helper(itinerary), height: 52, width: 52, style: 'vertical-align: top;')
    %td.itin_text_container{style: "padding-left: 5px;"}
      -unless itinerary.service.phone.blank?
        %strong.itinerary_strong{style: "text-align: left;font-family: 'Helvetica Neue', Arial; line-height: 1em; padding-left: 8px; strong {top: 0; position: absolute;}"}
          %a{href: "tel: #{itinerary.service.phone}", style: "color: #4862c8;"}= "Call #{itinerary.service.name}"
          = " to book your trip."
        .itinerary_text_small_black{style: "font-family: 'Helvetica Neue', Arial; font-size: 0.87em; text-align: left; vertical-align: top; padding-top: 8px; padding-left: 8px;"}
          = "Their phone number is #{itinerary.service.phone}."
      -else
        %strong.itinerary_strong{style: "text-align: left;font-family: 'Helvetica Neue', Arial; line-height: 1em; padding-left: 8px; strong {top: 0; position: absolute;}"}
          = itinerary.service.name
  %tr
    %td.itinerary_icons{style: "text-align: center;line-height: normal;font-size: 2.25em; padding: 16px 10px;"}
      =image_tag(attachments["start.png"].url, height: 26, width: 26, style: 'vertical-align: top;')
    %td.itin_text_container{style: "padding-left: 5px;"}
      .itinerary_text{style: "text-align: left;font-family: 'Helvetica Neue', Arial; line-height: 1em; padding-left: 8px; strong {top: 0; position: absolute;}"}
        = translate_helper(:start) + itinerary.trip_part.from_trip_place.name
      .itinerary_text_small{style: "font-family: 'Helvetica Neue', Arial; font-size: 0.87em; color: #4862c8; text-align: left; vertical-align: top; padding-top: 8px; padding-left: 8px;"}
        = format_time(itinerary.trip_part.scheduled_time.in_time_zone - itinerary.duration)
  %tr
    %td.itinerary_icons{style: "vertical-align:top; text-align: center;line-height: normal;font-size: 2.25em;padding: 16px 10px;"}
      = image_tag(logo_url_helper(itinerary), height: 26, width: 26, style: 'vertical-align: top;')
    %td.itin_text_container{style: "padding: 16px 10px;"}
      .itinerary_text{style: "text-align: left;font-family: 'Helvetica Neue', Arial; line-height: 1em; padding-left: 8px; strong {top: 0; position: absolute;}"}
        = "Take #{itinerary.service.name} to destination"
      .itinerary_text_small{style: "font-family: 'Helvetica Neue', Arial; font-size: 0.87em; color: #4862c8; text-align: left; vertical-align: top; padding-top: 8px; padding-left: 8px;"}
        = format_time(itinerary.trip_part.scheduled_time.in_time_zone - itinerary.duration) + ' ' + translate_helper(:to) + ' ' + format_time(itinerary.trip_part.scheduled_time.in_time_zone)
  %tr
    %td.itinerary_icons{style: "text-align: center;line-height: normal;font-size: 2.25em;padding: 16px 10px;"}
      =image_tag(attachments["stop.png"].url, height: 26, width: 26, style: 'vertical-align: top;')
    %td.itin_text_container{style: "padding: 16px 10px;"}
      .itinerary_text{style: "text-align: left;font-family: 'Helvetica Neue', Arial; line-height: 1em; padding-left: 8px; strong {top: 0; position: absolute;}"}
        = translate_helper(:arrive) + itinerary.trip_part.to_trip_place.name
      .itinerary_text_small{style: "font-family: 'Helvetica Neue', Arial; font-size: 0.87em; color: #4862c8; text-align: left; vertical-align: top; padding-top: 8px; padding-left: 8px;"}
        = format_time(itinerary.trip_part.scheduled_time.in_time_zone)
  %tr
    %td{style: "text-align: center;", colspan: 2}
      -if itinerary.map_image
        %div{style: "width:100%;background: white; border-radius: 5px; padding: 10px;"}
          =image_tag(attachments[itinerary.id.to_s + ".png"].url)

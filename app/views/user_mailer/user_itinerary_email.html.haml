= translate_helper_translate(:user_itinerary_email_header).to_s

- unless @comments.blank?
  %h3= translate_helper_translate(:comments)
  %p= @comments

%hr

%h2
  -if @itinerary.mode.code == 'mode_paratransit'
    =@itinerary.service.name
    %h3
      =@itinerary.service.provider.name
  -else
    =get_trip_summary_title(@itinerary)
%hr

%table{style: "font-size:1.4em;"}
  %tr
    %td{style: "color:grey;"}
      %strong
        = translate_helper_translate(:from) + ':  '
    %td
      %strong
        =@trip.from_place.name
  %tr
    %td{style: "color:grey; weight:strong;"}
      %strong
        =translate_helper_translate(:to) + ':  '
    %td
      %strong
        =@trip.to_place.name
  %tr
    %td{style: "color:grey;"}
      %strong
        =translate_helper_translate(:at_time)
    %td
      %strong
        =format_date(@trip.trip_datetime.in_time_zone)



-unless @itinerary.mode.code == 'mode_rideshare'
  %hr
  %h3
    =translate_helper_translate(:summary) + ":"
  = render :partial => 'trip_summary_header', :locals => { :itinerary => @itinerary }

%hr
%h3
  =translate_helper_translate(:details) +":"

= render :partial => get_trip_partial(@itinerary), :locals => { :itinerary => @itinerary }

%hr

= translate_helper_translate(:user_itinerary_email_footer).to_s

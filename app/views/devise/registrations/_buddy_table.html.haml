.row
  .col-sm-12
    - if user.delegate_relationships.count > 0
      %table.table.table.condensed.table-striped.table-hover.table-bordered#buddiesdatatable
        %thead
          %tr
            %th.left= translate_helper_translate(:buddy)
            %th.left= translate_helper_translate(:email)
            %th.left= translate_helper_translate(:status)
            %th.left= translate_helper_translate(:updated)
            - if can? :edit, user
              %th.center= translate_helper_translate(:actions)
        %tbody
          - user.delegate_relationships.each do |relationship|
            %tr
              %td.left= relationship.delegate.name
              %td.left= relationship.delegate.email
              %td.left= translate_helper_translate(relationship.relationship_status)
              %td.left= distance_of_time_in_words_to_now(relationship.updated_at).to_s + " " + translate_helper_translate(:ago)
              - if can? :edit, user
                %td.center
                  - if relationship.retractable
                    = link_to traveler_retract_user_user_relationship_path(user, relationship), remote: true, class: "btn btn-xs btn-warning text-center" do
                      %i.fa.fa-times
                      =translate_helper_translate(:retract)
                  - if relationship.revokable
                    = link_to traveler_revoke_user_user_relationship_path(user, relationship), remote: true, class: "btn btn-xs btn-warning text-center" do
                      %i.fa.fa-times
                      =translate_helper_translate(:revoke)
                  - if relationship.hidable
                    = link_to traveler_hide_user_user_relationship_path(user, relationship), remote: true, class: "btn btn-xs btn-warning text-center" do
                      %i.fa.fa-times
                      =translate_helper_translate(:hide)
    - else
      =translate_helper_translate(:not_any_buddies)

= render partial: 'shared/parameterized_datatable_javascript', locals: { table_id: '#buddiesdatatable',
  object_plural: 'buddies',
  sLengthMenu: translate_helper_translate(:menu__object_plural_per_page, o: 'buddies'),
  sInfo: translate_helper_translate(:showing__start__to__end__of__total__object_plural, o: 'buddies'),
  object_singular: 'buddy',
  bLengthChange: false, 
  bSort: true }
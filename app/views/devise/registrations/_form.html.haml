- content_for :title, "#{translate_helper(:site_title)} - #{translate_helper(:sign_up)}"
= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name),
        html: {class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  .row.info-header
    .col-sm-6
      %h1= translate_helper(:sign_up)
    .col-sm-6.btns
      .pull-right
        = button_tag type: 'submit', class: "btn action-button", style: 'margin-right:5px;' do
          = translate_helper(:apply)
        = link_to translate_helper(:cancel), :back, class: "btn action-button"
        
  .row
    .col-sm-6
      = render partial: 'shared/page_comments', locals: {key: :sign_up_header_comment}

  .row
    .col-sm-6
      .panel.panel-default#user_info{role: "main", aria: {label: "Sign Up Form"}}
        .panel-heading
          %h3.panel-title
            = translate_helper(:user_information)
            = add_tooltip("user_information_help")
        .panel-body
          = f.error_notification message: print_messages(f)
          = f.input :first_name, label: translate_helper(:first_name), :autofocus => true
          = f.input :last_name, label: translate_helper(:last_name)
          = f.input :email, label: translate_helper(:email), :required => true
          = f.input :preferred_locale, label: translate_helper(:preferred_locale), :collection => I18n.available_locales, :include_blank => false, label_method: lambda {|pl| translate_helper("locales.#{pl}")}
          = f.input :password, label: translate_helper(:password), :required => true
          = f.input :password_confirmation, :label => translate_helper(:password_confirmation), :required => true

  .row
    .col-sm-6
      = render partial: 'shared/page_comments', locals: {key: :sign_up_footer_comment}

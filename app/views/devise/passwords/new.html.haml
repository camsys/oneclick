- content_for :title, "#{translate_helper(:site_title)} - #{translate_helper(:password)}"
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'col-md-4 col-md-offset-4' }) do |f|
  %h1
    = translate_helper(:forgot_your_password)
  
  .row
    .panel.panel-default
      .panel-heading
        %h2.panel-title= translate_helper(:email)
      .panel-body
        = f.label :email
        = f.email_field :email, :placeholder => 'Email', :class => 'form-control'
        = f.error :email

  .pull-right{style: "margin-right:-15px;"}
    = content_tag(:button, :type=>:submit, :class => "btn btn-primary", :style => "margin-right:5px;") do
      = translate_helper(:ok)
    = link_to :back, :class => "btn btn-primary" do  
      = translate_helper(:back)
